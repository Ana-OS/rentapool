<div class="container">
  <div class="back-button-index">
    <%= link_to :back do %>
      <svg version="1.1" id="Layer_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px"
        viewBox="0 0 492 492" width="20px" fill="#151515" style="enable-background:new 0 0 492 492;" xml:space="preserve">
        <path d="M198.608,246.104L382.664,62.04c5.068-5.056,7.856-11.816,7.856-19.024c0-7.212-2.788-13.968-7.856-19.032l-16.128-16.12
          C361.476,2.792,354.712,0,347.504,0s-13.964,2.792-19.028,7.864L109.328,227.008c-5.084,5.08-7.868,11.868-7.848,19.084
          c-0.02,7.248,2.76,14.028,7.848,19.112l218.944,218.932c5.064,5.072,11.82,7.864,19.032,7.864c7.208,0,13.964-2.792,19.032-7.864
          l16.124-16.12c10.492-10.492,10.492-27.572,0-38.06L198.608,246.104z"/>
      </svg>
    <% end %>
  </div>
  <h1><%= @pool.name %> <span class="ml-1">by <%= @user.first_name %></span></h1>
  <div class="flex-container-trait mb-5 wrapper-show">
    <div class="container-trait-description mt-5">
      <div class="pool-description">
        <p><%= truncate(@pool.description, length: 100, separator: ' ')%></p>
        <p><%= @pool.price_hour %>€ p/day</p>
        <p><%= @pool.address %></p>
      </div>
      <div class="book-trait-button">
        <button type="button" class="btn book-trait btn-lg">
          <%= link_to "Book this pool", new_pool_booking_path(@pool) %>
        </button>
      </div>
    <!-- link to edit , delete, back to traits list -->
    </div>
    <% if @pool.photo.attached? %>
      <div class="traits-image mt-5">
        <%= cl_image_tag @pool.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
    <% end %>
  </div>
</div>
  <div class="container col-12  justify-content-center" style="background-color:#F3FBFC">
    <div class="container-fluid col-8 text-center other-pools-wrapper">
      <h2 class="other-pools-title">Check other pools</h2>
      <div class="row mx-auto mt-5 ml-5 justify-content-center">
        <% @pools.sample(3).each do |pool| %>
          <% if pool.photo.attached? %>
            <div class="card ml-4 mb-3" style="width: 15rem">
               <%= link_to pool_path(pool) do %>
                <img class="card-img-top" style="height:200px"src="<%= cl_image_path pool.photo.key%>">
                <div class="card-body">
                  <h5><%= pool.name%></h5>
                  <p class="card-text"><%= pool.address %><span class="ml-5 mt-3"><%= pool.price_hour %> p/day €</span></p>
                </div>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>



