          <% if pool.photo.attached? %>
            <div class="card-product mb-3 pool-product">
              <%= link_to pool_path(pool) do %>
                <img src="<%= cl_image_path pool.photo.key %>"/>
                <div class="card-product-infos">
                <%end%>
                <h2><%=link_to pool.name, pool_path(pool) %></h2>
                <p><%= truncate(pool.description, length: 47, separator: ' ') %></p>
                <p class="mt-2"><%= truncate(pool.address) %></p>
                <p><span class="price"><%= pool.price_hour %>â‚¬ p/day</span></p>
                </div>
            </div>
          <% end %>
        <% end %>
