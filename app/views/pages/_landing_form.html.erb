<%= form_tag pools_path, method: :get do %>
  <div class="mt-5 product-search">

    <div class="search-element">
      <%= text_field_tag :address,
        params[:address],
        class: "search-input",
        placeholder: "Search by City"
      %>
    </div>
    <%= submit_tag "Search", class: "search-button" %>
  </div>
<% end %>
