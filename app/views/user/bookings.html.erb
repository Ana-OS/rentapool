        </svg>
      <% end %>
    </div>
  <h1 class="title-user"><%=current_user.first_name.capitalize%>, your reservations</h1>
    <div class="container mx-auto">
    <% current_user.bookings.each do |booking| %>
      <div class="card-product mb-3 mx-auto">
        <%= link_to pool_path(booking.pool) do %>
          <img src="<%= cl_image_path booking.pool.photo.key %>"/>
          <div class="card-product-infos">
        <%end%>
          <h2><%= booking.pool.name.capitalize %></h2>
          <div class="booking-date">
            <div class="d-flex ml-3 mt-3">
              <p>From:<span class="mr-4"><%= booking.start_date%></span></p>
              <p>To:<span><%= booking.end_date %></span></p>
            </div>
          </div>
          <div class="booking-btns" >
            <div class="d-flex ml-2 mt-5">
              <div class="edit_green_btn ml-5">
                <%= link_to "Edit",  edit_pool_booking_path(booking.pool, booking) %>
              </div>
              <div class="delete_coral_btn ml-5">
               <%= link_to "Delete", booking_path(booking), method: :delete, data: {confirm: "are you sure?"}%>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
