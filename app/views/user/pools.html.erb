<h1 class="title-user mt-5"><%=current_user.first_name.capitalize%>, your listed pools</h1>
  <div class="container mx-auto">
  <% current_user.pools.each do |pool| %>
      <% if pool.photo.attached?  %>
       <div class="card-product mb-3 mx-auto">
        <%= link_to pool_path(pool) do %>
          <img src="<%=cl_image_path pool.photo.key%>"/>
          <div class="card-product-infos">
        <%end%>
          <h2><%=link_to pool.name, pool_path(pool) %></h2>
          <p class="mt-2"><%= truncate(pool.description, length: 47, separator: ' ') %></p>
          <p class="mt-4"><%= pool.address %></p>
          <p class="mt-5"><span class="price"><%= pool.price_hour %>â‚¬ p/hour</span></p>
          <div class="d-flex ml-3">
            <div class="edit_green_btn ml-5">
              <%= link_to "Edit",  edit_pool_path(pool) %>
            </div>
            <div class="delete_coral_btn ml-5">
              <%= link_to "Delete", pool_path(pool), method: :delete, data: {confirm: "are you sure?"}%>
            </div>
          </div>
          </div>
        <% end %>
       </div>
    </div>
  <% end %>
</div>

